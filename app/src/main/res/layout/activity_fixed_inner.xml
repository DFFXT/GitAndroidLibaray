<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.fxffxt.recyclerviewtoptixed.TopFixedRecyclerViewWrapper
        android:id="@+id/topFixedRecyclerViewWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wrapper_recyclerviewId="@id/recyclerview"
        app:wrapper_layout="@layout/layout_top_fixed_reyclerview_inner"
        app:wrapper_topSwitcherId="@id/top_switcher"
        app:wrapper_snap="0.2"/>

    <TextView
        android:id="@+id/tv_changeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:padding="10dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>